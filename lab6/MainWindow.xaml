<Window x:Class="SquareCalculation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Square Calculator" Height="200" Width="300">
    <Grid>
        <TextBox x:Name="InputArea" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="140,10,0,0" VerticalAlignment="Top" Width="75" Click="OnCalculateClick"/>
        <TextBlock x:Name="OutputPerimeter" HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" Text="Perimeter: " VerticalAlignment="Top"/>
        <TextBlock x:Name="OutputArea" HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="Area: " VerticalAlignment="Top"/>
    </Grid>
</Window>

